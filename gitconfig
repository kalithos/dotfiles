[core]
	editor = vi
	excludesfile = ~/.gitignore_global
[user]
	name = Herbert Chang
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[branch]
	autosetuprebase = always
[alias]
	log1 = log --pretty=oneline --abbrev-commit
	log-vee = log --decorate --cherry-pick --oneline --graph --boundary
	log-graph = log --all --graph --decorate
	log-refs = log --all --graph --decorate --oneline --simplify-by-decoration --no-merges
	pull-fp = pull --ff-only --prune
[push]
	default = nothing
[grep]
	lineNumber = true
[diff]
	algorithm = patience
